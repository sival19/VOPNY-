<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<AnchorPane id="AnchorPane" prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="vop.PrimaryController">
    <TabPane layoutX="158.0" layoutY="71.0" prefHeight="400.0" prefWidth="500.0" tabClosingPolicy="UNAVAILABLE"
             AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">
        <Tab text="Bandit">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="400.0">
                <HBox layoutX="65.0" layoutY="36.0" prefHeight="90.0" prefWidth="270.0">
                    <ImageView fx:id="spin1" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@fruits4.png"/>
                    </ImageView>
                    <ImageView fx:id="spin2" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@fruits2.png"/>
                    </ImageView>
                    <ImageView fx:id="spin3" fitHeight="90.0" fitWidth="90.0" pickOnBounds="true"
                               preserveRatio="true">
                        <Image url="@fruits8.png"/>
                    </ImageView>
                </HBox>
                <HBox layoutX="76.0" layoutY="136.0" prefHeight="38.0" prefWidth="259.0">
                    <Button fx:id="stopSpinButton_1" mnemonicParsing="false" onAction="#spinHandler"
                            prefWidth="90.0" text="Stop 1"/>
                    <Button fx:id="stopSpinButton_2" mnemonicParsing="false" onAction="#spinHandler"
                            prefWidth="90.0" text="Stop 2"/>
                    <Button fx:id="stopSpinButton_3" mnemonicParsing="false" onAction="#spinHandler"
                            prefWidth="90.0" text="Stop 3"/>
                </HBox>
                <Button fx:id="startSpinnersButton" layoutX="180.0" layoutY="174.0" mnemonicParsing="false"
                        onAction="#spinHandler" text="Start"/>
                <Label fx:id="winningLabel" layoutX="73.0" layoutY="213.0" prefHeight="31.0"
                       prefWidth="265.0" style="-fx-background-color: ligthgray;">
                    <font>
                        <Font name="System Bold" size="18.0"/>
                    </font>
                </Label>
            </AnchorPane>
        </Tab>
    </TabPane>
</AnchorPane>
